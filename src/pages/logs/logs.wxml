<!--logs.wxml-->
<view class="center">
  <view class="messageBox">
    <view class="bg">
      <image class="head" src="{{userInfo.avatarUrl ? userInfo.avatarUrl : '/images/avart.png'}}"></image>
    </view>
    <view class="mes">
      <view class="title">{{userInfo.nickName ? userInfo.nickName : ''}}</view>
      <view class="tt">一些相关简介</view>
    </view>
    <view class="nav">
      <view bindtap="handleNav" data-id="1" class="tab l"><text class="{{tab == 1 ? 'acTab' : ''}}">个人作品</text></view>
      <view bindtap="handleNav" data-id="2" class="tab"><text class="{{tab == 2 ? 'acTab' : ''}}">投票作品</text></view>
    </view>
  </view>


  <view wx:if="{{tab == 1}}" class="content">
    <view wx:for="{{arr}}" wx:key="index" class="cell">
      <view class="cellCon">
        <image src="{{item}}"></image>
        <view class="conText" style="padding-bottom: 10rpx">
          <view class="text" style="border-bottom: 1px solid transparent">
            <view>+2833</view>
            <view>超级越野车</view>
            <view>文案不知道写什么车看起来不错经典车型</view> 
          </view>
          
          <view class="newBody">
            <image src="/images/ping.png"></image> 66---
            <text>16天 上传</text>
          </view>
        </view>
      </view>
    </view>
  </view>
  <view wx:else class="content">
    <view wx:for="{{arr}}" wx:key="index" class="cell">
      <view class="cellCon">
        <image src="{{item}}"></image>
        <view class="conText">
          <view class="text">
            <view>+2833</view>
            <view>超级越野车</view>
            <view>文案不知道写什么车看起来不错经典车型</view> 
          </view>
          <view class="bodys">
            <image class="left" src="/images/avart.png"></image>
            <view class="mid">
              <view class="title">sx-dhuq</view>
              <view class="ttl">这里是简介。。。</view>
            </view>
            <view class="last">
              <view><image src="/images/ping.png"></image> 66</view>
              <view>16天前</view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
